---
import { services } from "@/data/services";
---

<section id="services" class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-primary mb-12">
      Nuestros Servicios Legales
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service) => (
          <div class="bg-gray-50 p-6 rounded-lg hover:shadow-lg transition-shadow">
            <div class="text-4xl mb-4">{service.icon}</div>
            <h3 class="text-xl font-bold text-primary mb-3">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
