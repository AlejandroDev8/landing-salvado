---
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {title = "Abogado Salvador Alvarado - Servicios Legales Profesionales"} = Astro.props
const {description = "Abogado especializado en derecho civil, mercantil, laboral y penal."} = Astro.props

---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Source+Sans+Pro:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <slot />
  </body>
</html>

<style>
  html,
  
  body {
    margin: 0;
    font-family: 'Source Sans Pro', sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
</style>
